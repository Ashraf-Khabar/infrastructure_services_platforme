pipeline {
    agent {
        label 'dotnet_slave_agent'
    }
    stages {
        stage('Update Packages') {
            steps {
                sh 'sudo apt update -y'
                sh 'sudo apt upgrade -y'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('user_management_app/api'){
                    sh 'ls -li'
                    sh 'pip3 install -r requirements.txt'
                }  
            }
        }
    }

}