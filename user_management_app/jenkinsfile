pipeline {
    agent {
        label 'dotnet_slave_agent'
    }
    stages {
        stage('Update and Install Python') {
            steps {
                sh '''
                    sudo apt update -y
                    sudo apt upgrade -y
                    sudo apt install -y python3 python3-pip python3-venv
                '''
            }
        }
        
        stage('Verify Installation') {
            steps {
                sh '''
                    python3 --version
                    pip3 --version
                '''
            }
        }

        stage('Set up requirements for API') {
            dir('UserManagementAPI/api') {
                sh 'pip3 -r requirements.txt'
            }
        }
    }
    
    post {
        always {
            echo 'Python installation process completed'
        }
    }
}