pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/sdk:8.0'
            args '-v /var/jenkins_home:/var/jenkins_home'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'dotnet --version'
                sh 'dotnet build'
            }
        }
    }
}