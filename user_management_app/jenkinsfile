pipeline {
    agent any
    
    stages {
        stage('Vérifier Python existant') {
            steps {
                sh '''
                    echo "Vérification de Python installé..."
                    echo "Python 3 version:"
                    python3 --version || echo "Python3 non trouvé"
                    
                    echo "Python disponible:"
                    which python3 || which python || echo "Aucun Python trouvé"
                    
                    echo "Pip disponible:"
                    python3 -m pip --version || echo "Pip non trouvé"
                '''
            }
        }
        
        stage('Utiliser Python existant') {
            steps {
                script {
                    echo "Utilisation de Python déjà installé"
                    echo "Le pipeline utilisera le Python disponible sur l'agent"
                }
            }
        }
    }
}