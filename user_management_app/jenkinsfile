pipeline {
    agent any
    
    stages {
        stage('Install Python') {
            steps {
                sh '''
                    # Simple installation de Python
                    echo "Installation de Python 3.9..."
                    sudo apt-get update
                    sudo apt-get install -y python3.9 python3.9-venv
                    
                    # Vérification
                    echo "Python version:"
                    python3.9 --version
                    echo "Installation terminée!"
                '''
            }
        }
    }
}