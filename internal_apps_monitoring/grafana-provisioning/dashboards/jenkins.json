{
  "id": null,
  "title": "Jenkins Pipeline Metrics",
  "tags": ["jenkins", "pipelines"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "hideControls": false,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "Pipeline Execution Status",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(jenkins_job_status{job=\"user_management_app_pipeline\"}) by (result)",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "format": "short",
      "valueName": "current",
      "thresholds": "0,1",
      "colors": ["#F2495C", "#73BF69", "#FF9830"],
      "colorValue": false,
      "decimals": 0,
      "gauge": {
        "maxValue": 100,
        "minValue": 0,
        "show": true,
        "thresholdLabels": false,
        "thresholdMarkers": true
      }
    },
    {
      "id": 2,
      "title": "Build Duration Trends",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jenkins_job_duration{job=\"user_management_app_pipeline\"}",
          "legendFormat": "Build Duration",
          "refId": "A"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 5,
      "bars": false,
      "stack": false,
      "percentage": false,
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": false,
        "current": false,
        "total": false,
        "avg": false
      },
      "nullPointMode": "null",
      "steppedLine": false,
      "tooltip": {
        "value_type": "individual",
        "shared": true
      },
      "timeFrom": null,
      "timeShift": null,
      "xaxis": {
        "show": true,
        "mode": "time",
        "values": []
      },
      "yaxes": [
        {
          "format": "s",
          "label": "Duration (seconds)",
          "logBase": 1,
          "min": "0",
          "show": true
        },
        {
          "format": "short",
          "logBase": 1,
          "min": "0",
          "show": true
        }
      ]
    },
    {
      "id": 3,
      "title": "Stage Execution Times",
      "type": "bargauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jenkins_stage_duration_seconds{job=\"user_management_app_pipeline\"}",
          "legendFormat": "{{stage}}",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "basic",
        "showUnfilled": true,
        "valueMode": "color"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "continuous-BlPu"
          },
          "custom": {
            "align": "center",
            "displayMode": "auto"
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Test Results Overview",
      "type": "piechart",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(jenkins_tests_total{job=\"user_management_app_pipeline\"}) by (result)",
          "legendFormat": "{{result}}",
          "refId": "A"
        }
      ],
      "pieType": "pie",
      "donut": true,
      "legend": {
        "show": true,
        "values": true
      }
    },
    {
      "id": 5,
      "title": "Pipeline Success Rate (7 days)",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * (sum(increase(jenkins_job_status{job=\"user_management_app_pipeline\", result=\"SUCCESS\"}[7d])) / sum(increase(jenkins_job_status{job=\"user_management_app_pipeline\"}[7d])))",
          "legendFormat": "Success Rate",
          "refId": "A"
        }
      ],
      "thresholds": "50,80,90",
      "maxValue": 100,
      "minValue": 0,
      "valueOptions": {
        "show": true,
        "decimals": 1,
        "unit": "percent"
      }
    }
  ],
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "time_options": [],
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  },
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(jenkins_job_status, job)",
        "refresh": 1,
        "includeAll": false,
        "multi": false,
        "allValue": null
      }
    ]
  },
  "refresh": "30s"
}